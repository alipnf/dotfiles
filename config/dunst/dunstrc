[global]
    ### Display ###

    # Which monitor should the notifications be displayed on.
    monitor = 0

    # Display notification on focused monitor. 
    follow = none

    ### Geometry ###

    # Dynamic width from 0 to 300
    width = (0, 300)

    # Position the notification in the top right corner
    origin = top-right

    # Offset from the origin
    offset = 50x50

    # Scale factor. It is auto-detected if value is 0.
    scale = 0

    # Maximum number of notifications (0 means no limit)
    notification_limit = 4

    ### Progress Bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0
    progress_bar_corners = all
    icon_corner_radius = 0
    icon_corners = all

    # Transparency of the window (0 to 100)
    transparency = 10

    # Padding options
    separator_height = 2
    padding = 10
    horizontal_padding = 10
    text_icon_padding = 10

    # Notification frame width and color
    frame_width = 3
    frame_color = "#aaaaaa"

    # Gap size between notifications
    gap_size = 10

    # Separator color
    separator_color = frame

    # Sort order for notifications
    sort = yes

    # Show hidden notifications count
    indicate_hidden = yes

    ### Text ###

    font = JetBrainsMono Nerd Font 12
    line_height = 0

    # Markup settings for notification text
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle

    # Stack duplicate notifications
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 32
    max_icon_size = 128
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    ### History ###

    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###

    # dmenu path
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening URLs
    browser = /usr/bin/xdg-open

    # Always run rule-defined scripts
    always_run_script = true

    # Define the title and class of the windows spawned by dunst
    title = Dunst
    class = Dunst

    # Corner radius for notification window
    corner_radius = 10
    corners = all

    # Ignore dbus closeNotification message
    ignore_dbusclose = false

    ### Wayland ###

    force_xwayland = false

    ### Mouse Actions ###

    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    # Calculate dpi on a per-monitor basis
    per_monitor_dpi = false

[urgency_low]
    background = "#16161e"
    foreground = "#c0caf5"
    frame_color = "#c0caf5"
    timeout = 10

[urgency_normal]
    background = "#1a1b26"
    foreground = "#c0caf5"
    frame_color = "#c0caf5"
    timeout = 10
    override_pause_level = 30

